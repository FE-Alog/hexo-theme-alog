select 
  margin: 0
  padding: 0

*
  box-sizing: border-box
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
  -webkit-user-select: none;
  -moz-user-focus: none;
  -moz-user-select: none;
  transition: background-color 0.3s;
  transition-timing-function: ease

html
body 
  size: 100% 100vh
  min-width: 300px

html
  font-size: 10px

body
  background-color: get-css-var("color", "background")
  color: get-css-var("color", "on-secondary-container")
  font-size: 1.4rem
  // font-family: 'Microsoft YaHei'

ul
ol 
  list-style: none

img
  border: none;
  vertical-align: middle

a
  text-decoration: none
  color: get-css-var("color", "on-background") 

p
  color: get-css-var("color", "on-background") 

table
  border-collapse: collapse
  table-layout: fixed

input
textarea 
  outline: none
  border: none

textarea 
  resize: none
  overflow: auto
