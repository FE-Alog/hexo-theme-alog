.side-menu-container
  position: fixed
  z-index: 4
  visibility: hidden
  width: 100vw
  height: 100vh
  background-color: rgba(44, 44, 44, 0.8)

  .menu
    overflow-y: auto
    position: relative
    size: 280px 100%
    max-height: 100%
    padding: 60px 20px
    background-color: get-css-var("color", "secondary-container-highest")
    .active
      border: 1px solid get-css-var("color", "primary-0")
      border-right-width: 6px
    .category-menu-wrapper
      overflow: hidden
      .menu-item-name
        flex-box(row, space-between)
        padding: 15px
        .iconfont
          flex-box(row, flex-start, center)
          transition: all 0.9s
          transform: rotateZ(0deg)
      .category-menu-list
        max-height: 0
        padding: 0 15px
        transition: all 0.8s
        .active
          background-color: get-css-var("color", "secondary-container-high")
    .category-expand 
      .menu-item-name
        .iconfont
          transform: rotateZ(180deg)
      .category-menu-list
        overflow-y: scroll
        max-height: 500px

    li
      cursor: pointer

    li:not([class~='iconfont'])
      margin-bottom: 10px
      border-radius: 6px
      background-color: get-css-var("color", "secondary-container-high")
      a
        display: block
        padding: 15px 15px


    li:not([class~="category-menu-wrapper"]):not([class~='iconfont']):hover
      background-color: get-css-var("color", "secondary-container")

    .icon-close-circle
      position: absolute
      top: 20px
      right: 20px
      font-size: 2.4rem
