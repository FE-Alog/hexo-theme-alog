.markdown 
  line-height: 1.85
  a
    color: get-css-var("color", "primary-0")

  p
    margin: 8px 0
    line-height: inherit
    color: inherit

  p:has(img)
    flex-box(column, space-around, center)

  h1, h2, h3, h4, h5, h6
    display: flex
    align-items: center
    margin: 0
    color: get-css-var("color", "on-secondary-container")
  h2, h3
    position: relative
    padding-left: 14px
  h1
    margin: 16px 0
    line-height: 1.8
  h2, h3
    margin: 12px 0
    line-height: 1.6
  h4, h5, h6
    margin: 10px 0
    line-height: 1.4
  h2::before
  h3::before 
    content: ''
    position: absolute
    left: 0
    width: 6px
    border-radius: 2px
    background-color: get-css-var("color", "primary-0")
  h2::before
    top: 7px
    height: 18px
  h3::before 
    top: 6px
    height: 14px
