::-webkit-scrollbar-track
  padding: 0 2px
  box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3)
  border-radius: 10px
  background-color: get-css-var("color", "secondary-container-high")

::-webkit-scrollbar
  size: 6px

::-webkit-scrollbar-thumb
  min-height: 28px
  background-color: get-css-var("color", "secondary-fixed-dim")
  background-clip: padding-box
  border-radius: $border-radius-base 

