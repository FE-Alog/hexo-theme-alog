#theme-btn {
  position: fixed
  bottom: 30px
  right: 30px
  z-index: 99
  size(3vw, 3vw)
  flex-box(row, center, center)
  max-width: 60px
  max-height: 60px
  min-width: 50px
  min-height: 50px
  background-color: get-css-var("color", "secondary-container-high")
  border-radius: 50%
  border: 1px solid get-css-var("color", "secondary-fixed-variant")
  cursor: pointer

  &::before {
    font-size: 2.4rem
  }
}

:root {
  $baseColor = {
    "primary": #fc6423,
    "tertiary": #6482f8,
  }
  
  $white = #ffffff
  $black = #000000

  // 定义渐变颜色数量
  $numColors = 20;

  $step = 1 / $numColors;

  for $i in 0..$numColors {
      $position = floor(percentage($i * $step));

      $result = mix($white, $black, $position);
      set-css-var(
        "color", 
        "secondary-" + $i, 
        $result
      );
    }

  for $color, $value in $baseColor {
    for $i in 0..$numColors {
      $position = floor(percentage($i * $step));

      $mix1 = mix($white, $black, $position);
      $result = mix($mix1, $value, $position);
      set-css-var(
        "color", 
        $color + "-" + $i, 
        $result
      );
    }
  }
}

:root[data-theme="light"] {
  #theme-btn::before {
    content: '\e697'
  }

  for $color, $value in $light {
    set-css-var("color", $color, $value);
  }
}
:root[data-theme="dark"] {
  #theme-btn::before {
    content: '\e666'
  }

  for $color, $value in $dark {
    set-css-var("color", $color, $value);
  }
}


