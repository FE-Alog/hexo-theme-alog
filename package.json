{
  "name": "hexo-theme-alog",
  "private": false,
  "version": "1.2.1",
  "description": "Alog is a simple and elegant hexo theme.",
  "files": [
    "languages/**/*",
    "layout/**/*",
    "scripts/**/*",
    "source/**/*",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FE-Alog/hexo-theme-alog.git"
  },
  "keywords": [
    "hexo",
    "theme",
    "alog"
  ],
  "author": "Akino",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FE-Alog/hexo-theme-alog/issues"
  },
  "homepage": "https://github.com/FE-Alog/hexo-theme-alog#readme",
  "scripts": {
    "commit": "cz",
    "release": "npx semantic-release",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1",
    "semantic-release": "^21.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
